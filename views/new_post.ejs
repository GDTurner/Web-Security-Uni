<%- include('head') %>
<%- include('nav') %>

<h1 class="text-center text-4xl font-bold mb-6"><%= title %></h1>

    <form action="" class="w-full flex flex-col justify-center" >
        <div class="w-full  flex justify-center">
                  <label for="title"></label>
                  <input class="text-center appearance-none border-2 border-gray-200 rounded w-1/3 h-12 py-2 px-4 text-gray-700 flex justify-center focus:outline-none focus:border-indigo-300" id="title" type="text" value="" placeholder="Your Title">
                </div>
 
                <div class="w-full  flex justify-center">
                    <textarea name="post" id="text" class="w-2/3 h-96 p-2 rounded focus:outline-none focus:ring focus:border-indigo-300"></textarea>
                </div>
                <div class="w-full flex justify-center">
                    <input type="submit" onclick="onSubmit()" value="Submit" id="submit" class="bg-indigo-300 w-2/3 h-10 p-2 m-1 rounded hover:bg-indigo-400">
                </div>
    </form>


</body>
</html>

